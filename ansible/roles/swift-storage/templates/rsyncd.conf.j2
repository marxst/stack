uid = swift
gid = swift
log file = /var/log/rsyncd.log
pid file = /var/run/rsyncd.pid
address = {{ swift_rsync_listen }}

[account]
max connections = 2
path = {{ swift_root}}/
read only = false
lock file = /var/lock/account.lock

[container]
max connections = 2
path = {{ swift_root }}/
read only = false
lock file = /var/lock/container.lock

[object]
max connections = 2
path = {{ swift_root }}/
read only = false
lock file = /var/lock/object.lock
